<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
	    
	</style>

	<style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
	</style>

    <style name="RelativeLayout_interface_element_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ac1717</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="txt_main_textbox">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_ip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="txt_IPAddr_element_1" parent="@style/txt_main_textbox">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="txt_IPAddr_element_1.column1">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="frame_label_interface_element_1">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/back_sec_label</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="label_inerface_element_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="label_IPbin_1">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#111111</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
